doctype html
html(lang="en")
  head
    link(rel='stylesheet', href='https://unpkg.com/gutenberg-css@0.4', media='print')
    link(rel='stylesheet', href='https://unpkg.com/gutenberg-css@0.4/dist/themes/oldstyle.min.css', media='print')
    link(rel='stylesheet', href='./style.css')
  body
    each post in posts
        div.page-break-before.post
            div.page.text
                p= post.text
            each imagePage in post.images
                div.page.page-break-before.images
                    ul
                        each image, index in imagePage
                            li
                                img(src=image, alt=index)